<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp"
    >


    <ImageView
        android:id="@+id/item_iv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/login_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/item_tv_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/app_name"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_toRightOf="@id/item_iv_icon"
        android:layout_alignTop="@id/item_iv_icon"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/item_tv_size"
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/item_tv_duration"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:layout_toRightOf="@id/item_iv_icon"
        android:layout_alignBottom="@id/item_iv_icon"
        android:layout_marginLeft="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#66ffffff"
        />

</RelativeLayout>